{
  "name": "doc-tools",
  "displayName": "Doc Tools",
  "description": "tools for markdown docs",
  "publisher": "gzbang",
  "icon": "icon.png",
  "version": "0.0.9",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opensourceways/vscode-doc-tools.git"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "codeActionsProvider": {
      "language": "markdown"
    },
    "commands": [
      {
        "command": "doc.tools.check",
        "title": "运行Markdown检查"
      },
      {
        "command": "doc.tools.gen.toc.manual",
        "title": "生成手册 _toc.yaml"
      },
      {
        "command": "doc.tools.codespell.add.whitelist",
        "title": "添加单词白名单"
      },
      {
        "command": "doc.tools.url.add.whitelist",
        "title": "添加链接白名单"
      },
      {
        "command": "doc.tools.preview.markdown",
        "title": "预览Markdown",
        "icon": {
          "light": "resources/icon-preview-light.svg",
          "dark": "resources/icon-preview-dark.svg"
        }
      },
      {
        "command": "doc.tools.markdownlint.fix",
        "title": "修复MarkdownLint错误"
      },
      {
        "command": "doc.tools.check.name",
        "title": "检查目录、文件是否符合命名规范"
      },
      {
        "command": "doc.tools.check.nameConsistency",
        "title": "检查中英文文档名称一致性"
      },
      {
        "command": "doc.tools.check.linkAccessibility",
        "title": "检查链接可访问性"
      },
      {
        "command": "doc.tools.genMarkdownAnchorId",
        "title": "生成链接锚点并复制"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "doc.tools.folder",
          "when": "explorerResourceIsFolder",
          "group": "doc.tools.toc"
        }
      ],
      "editor/context": [
        {
          "submenu": "doc.tools.markdown",
          "when": "resourceLangId == markdown",
          "group": "doc.tools.toc"
        }
      ],
      "editor/title": [
        {
          "command": "doc.tools.preview.markdown",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "doc.tools.folder": [
        {
          "command": "doc.tools.gen.toc.manual"
        },
        {
          "command": "doc.tools.check.name"
        },
        {
          "command": "doc.tools.check.nameConsistency"
        },
        {
          "command": "doc.tools.check.linkAccessibility"
        }
      ],
      "doc.tools.markdown": [
        {
          "command": "doc.tools.genMarkdownAnchorId"
        }
      ]
    },
    "submenus": [
      {
        "id": "doc.tools.folder",
        "label": "Doc Tools"
      },
      {
        "id": "doc.tools.markdown",
        "label": "Doc Tools"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Doc Tools配置",
      "properties": {
        "docTools.scope.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用检查范围仅限于 docs/zh 和 docs/en 目录"
        },
        "docTools.markdownlint.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用Markdownlint检查"
        },
        "docTools.markdownlint.config": {
          "type": "object",
          "default": {},
          "description": "Markdownlint自定义配置"
        },
        "docTools.check.tagClosed.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用Html标签闭合检查"
        },
        "docTools.check.linkValidity.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用链接有效性检查（包含：1. 内链；2. 外链）"
        },
        "docTools.check.linkValidity.only404.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用链接有效性检查只在链接无法访问时提示"
        },
        "docTools.check.resourceExistence.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用资源是否存在检查（包含：1. 内链；2. 外链）"
        },
        "docTools.check.resourceExistence.only404.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用资源是否存在检查只在资源无法访问时提示"
        },
        "docTools.check.url.whiteList": {
          "type": "array",
          "default": [],
          "description": "检测链接白名单（添加后忽略对该链接的检查）"
        },
        "docTools.check.codespell.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用单词拼写检查"
        },
        "docTools.check.codespell.whiteList": {
          "type": "array",
          "default": [],
          "description": "单词白名单（添加后忽略对该单词的检查）"
        },
        "docTools.check.toc.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用 _toc.yaml 检查（包含：1.目录中引用的文件需要存在；2.md 文件是否加入 _toc.yaml）"
        },
        "docTools.check.punctuationBlankSpace.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用中文标点符号前后无空格检查（因语句含义复杂，可能存在误报）"
        },
        "docTools.check.punctuationMixing.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用中英文标点符号混用检查（因语句含义复杂，可能存在误报）"
        },
        "docTools.check.punctuationConsecutive.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用连续标点符号检查（因语句含义复杂，可能存在误报）"
        },
        "docTools.check.punctuationManualLink.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用手册/指南链接是否被书名号包裹检查（因语句含义复杂，可能存在误报）"
        },
        "docTools.check.punctuationPair.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用中英文标点符号是否配对检查（因语句含义复杂，可能存在误报）"
        },
        "docTools.check.name.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用文件/目录命名规范检查"
        },
        "docTools.check.name.whiteList": {
          "type": "array",
          "default": [],
          "description": "文件/目录命名规范白名单（添加后忽略对该名称的检查）"
        },
        "docTools.check.nameConsistency.enable": {
          "type": "boolean",
          "default": false,
          "description": "启用中英文文档名称一致性检查"
        }
      }
    }
  },
  "scripts": {
    "dev:webview": "yarn workspace webview dev",
    "build:webview": "yarn workspace webview build",
    "dev:ext": "yarn workspace extension watch:esbuild",
    "build:ext": "yarn workspace extension package",
    "build": "yarn build:ext && yarn build:webview && vsce package"
  }
}
